@model IEnumerable<CURD_WINEDB.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Catalogy.CatalogyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
     
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Catalogy.CatalogyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
       
        <td>

            @{
                var imgUrl = "~/wwwroot/WineImages/" + item.Image;
            }
            <img class="img-thumbnail" width="100" height="100" src="@Url.Content(imgUrl)" />
            <br />
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ProductID }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.ProductID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ProductID })
        </td>
    </tr>
}

</table>
