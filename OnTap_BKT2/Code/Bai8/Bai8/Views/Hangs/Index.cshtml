@model IEnumerable<Bai8.Models.Hang>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>

@using(Html.BeginForm())
            {
                @Html.TextBox("search")
                <input type="submit"  value="Tìm"/>
            }
<table class="table">
    <tr>
        <th>
           Mã hàng
        </th>
        <th>
            @Html.ActionLink("Tên hàng", "Index", new { orderName = !ViewBag.SapTheoTen, orderPrice = ViewBag.SapTheoGia })
        </th>
        <th>
            @Html.ActionLink(" Giá", "Index", new { orderName = ViewBag.SapTheoTen,  orderPrice = !ViewBag.SapTheoGia })
           
        </th>
        <th>
           Hình ảnh
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gia)
        </td>
        
        <td>
            @{ 
                string imgPath = "~/wwwroot/WineImages/" + item.HinhAnh;
            }
            <img src="@Url.Content(imgPath)" width="100" class="img-thumbnail" />
            @Html.DisplayFor(modelItem => item.HinhAnh)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaHang.Trim() }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaHang.Trim() }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaHang.Trim() })
        </td>
    </tr>
}

</table>
