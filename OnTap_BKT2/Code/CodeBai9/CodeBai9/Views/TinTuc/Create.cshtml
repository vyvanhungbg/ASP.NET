@model CodeBai9.Models.Tintuc

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<style>
    th,td{
        padding:12px;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-horizontal">
        <h4>Tintuc</h4>
        
        <table>
            <tr>
                <td>Tiêu đề</td>
                <td>@Html.TextBox("Tieudetin")</td>
                @if (ViewBag.LoiTieuDeTin != null)
                {
                         <td style="color:red">@ViewBag.LoiTieuDeTin</td>
                }
            </tr>
            <tr>
                <td>Mã thể loại</td>
                <td> @Html.DropDownList("IDLoai", null, htmlAttributes: new { @class = "form-control" })</td>
            </tr>

            <tr>
                <td>Nội dung</td>
                <td>@Html.TextBox("Noidungtin")</td>
                @if (ViewBag.LoiNoiDung != null)
                {
                    <td style="color:red">@ViewBag.LoiNoiDung</td>
                }
            </tr>

            <tr>
                <td colspan="2" align="center"><input type="submit" value="Create" class="btn btn-default" /></td>
            </tr>
        </table>

       
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
