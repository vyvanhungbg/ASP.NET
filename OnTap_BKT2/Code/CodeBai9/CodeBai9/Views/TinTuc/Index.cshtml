
@{
    ViewBag.Title = "Index";
}
<style>
    th,td{
        padding: 12px;
    }
    th{
        background-color: orange;
    }
</style>

@Html.ActionLink("Thêm mới", "Create", "TinTuc")
<h2>Xem danh sách tin tức</h2>
<table border="1">
    <tr>
        <th>
            Mã tin
        </th>
        <th>
            Tiêu đề
        </th>
        <th>
            Nội dung
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>@item.IdTin</td>
    <td>@item.Tieudetin</td>
    <td>@item.Noidungtin</td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new {id = item.IdTin}) | 
        @Html.ActionLink("Chi tiết", "Details", new {id = item.IdTin}) |
        @Html.ActionLink("Xóa", "Delete", new {id = item.IdTin})
     </td>
</tr>
    }
</table>
